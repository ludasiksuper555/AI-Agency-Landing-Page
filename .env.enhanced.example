# Enhanced Team Portfolio - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Application Metadata
NEXT_PUBLIC_APP_NAME="Enhanced Team Portfolio"
NEXT_PUBLIC_APP_DESCRIPTION="A comprehensive team showcase with advanced features"
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Clerk Authentication (https://clerk.dev/)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# JWT Secret for API authentication
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars

# Session Configuration
SESSION_SECRET=your_session_secret_here_min_32_chars
SESSION_TIMEOUT=86400

# CORS Settings
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/team_portfolio
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=team_portfolio
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_SSL=false

# Database Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=30000

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================

# Contentful CMS (https://contentful.com/)
CONTENTFUL_SPACE_ID=your_contentful_space_id
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token
CONTENTFUL_PREVIEW_ACCESS_TOKEN=your_contentful_preview_token
CONTENTFUL_MANAGEMENT_TOKEN=your_contentful_management_token
CONTENTFUL_ENVIRONMENT=master

# Content Settings
CONTENT_CACHE_TTL=300
CONTENT_PREVIEW_MODE=false

# =============================================================================
# FILE STORAGE & CDN
# =============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1

# Cloudinary (Alternative image service)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# CDN Settings
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com
NEXT_PUBLIC_IMAGES_DOMAIN=images.yourdomain.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry Error Monitoring (https://sentry.io/)
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# Application Insights (Azure)
APPINSIGHTS_INSTRUMENTATIONKEY=your_app_insights_key

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME="Team Portfolio"

# Resend (Alternative)
RESEND_API_KEY=your_resend_api_key

# SMTP Configuration (Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_SECURE=false

# =============================================================================
# SOCIAL MEDIA & INTEGRATIONS
# =============================================================================

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_ORG=your_github_organization

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Twitter API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# =============================================================================
# SEARCH & INDEXING
# =============================================================================

# Algolia Search
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your_algolia_search_key
ALGOLIA_ADMIN_API_KEY=your_algolia_admin_key
ALGOLIA_INDEX_NAME=team_members

# Elasticsearch (Alternative)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100
CACHE_STRATEGY=lru

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Image Optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_IMAGE_QUALITY=80
NEXT_PUBLIC_IMAGE_FORMATS=webp,avif

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# Default Language Settings
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,uk,es,fr,de
NEXT_PUBLIC_LOCALE_DETECTION=true

# Translation Services
TRANSLATION_API_KEY=your_translation_api_key
TRANSLATION_SERVICE=google

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Settings
DEV_MODE=true
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6380
TEST_TIMEOUT=30000

# Storybook
STORYBOOK_PORT=6006
STORYBOOK_HOST=localhost

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================

# Weather API (for location-based features)
WEATHER_API_KEY=your_weather_api_key

# Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Payment Processing (if needed)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# DEPLOYMENT & CI/CD
# =============================================================================

# Vercel Deployment
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Docker Configuration
DOCKER_REGISTRY=your_docker_registry
DOCKER_IMAGE_TAG=latest

# Kubernetes
KUBE_CONFIG_PATH=/path/to/kubeconfig
KUBE_NAMESPACE=team-portfolio

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# GDPR Compliance
GDPR_ENABLED=true
COOKIE_CONSENT_REQUIRED=true

# Data Retention
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_ANIMATIONS=true
NEXT_PUBLIC_FEATURE_PWA=true
NEXT_PUBLIC_FEATURE_OFFLINE_MODE=false
NEXT_PUBLIC_FEATURE_REAL_TIME=false
NEXT_PUBLIC_FEATURE_ADVANCED_SEARCH=true
NEXT_PUBLIC_FEATURE_EXPORT_DATA=true
NEXT_PUBLIC_FEATURE_TEAM_CHAT=false

# Experimental Features
NEXT_PUBLIC_EXPERIMENTAL_FEATURES=false
NEXT_PUBLIC_BETA_FEATURES=false

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Log Levels
LOG_LEVEL=info
DATABASE_LOG_LEVEL=warn
API_LOG_LEVEL=debug

# Log Destinations
LOG_TO_FILE=false
LOG_TO_CONSOLE=true
LOG_TO_EXTERNAL=false

# Debug Settings
DEBUG_SQL=false
DEBUG_API=false
DEBUG_CACHE=false

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# =============================================================================
# CUSTOM CONFIGURATIONS
# =============================================================================

# Custom API Endpoints
CUSTOM_API_ENDPOINT=https://api.yourdomain.com
CUSTOM_WEBHOOK_URL=https://yourdomain.com/webhooks

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Custom Feature Settings
MAX_TEAM_MEMBERS=100
MAX_FILE_UPLOAD_SIZE=10485760
SESSION_DURATION=86400
PAGINATION_DEFAULT_LIMIT=20
SEARCH_DEBOUNCE_MS=300

# =============================================================================
# NOTES
# =============================================================================

