# =============================================================================
# AI AGENCY LANDING PAGE - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================
# Get these from https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk URLs (optional - auto-generated if not provided)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# =============================================================================
# CONTENTFUL CMS
# =============================================================================
# Get these from your Contentful space settings
CONTENTFUL_SPACE_ID=your_contentful_space_id
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token
CONTENTFUL_PREVIEW_ACCESS_TOKEN=your_contentful_preview_token
CONTENTFUL_MANAGEMENT_TOKEN=your_contentful_management_token

# Content delivery settings
CONTENTFUL_ENVIRONMENT=master
CONTENTFUL_PREVIEW_MODE=false

# =============================================================================
# GOOGLE ANALYTICS
# =============================================================================
# Get this from Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager (optional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# =============================================================================
# SENTRY ERROR MONITORING
# =============================================================================
# Get this from https://sentry.io/
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Sentry configuration
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
# Your site URL (important for production)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=AI Agency
NEXT_PUBLIC_SITE_DESCRIPTION=Professional AI Agency Landing Page

# API Configuration
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Security headers and CSRF protection
SECURITY_HEADERS_ENABLED=true
CSRF_SECRET=your_csrf_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# =============================================================================
# MGX INTEGRATION
# =============================================================================
# MGX API configuration
MGX_API_KEY=your_mgx_api_key
MGX_ENDPOINT=https://api.mgx.com/v1
MGX_TIMEOUT=30000
MGX_RETRY_ATTEMPTS=3

# MGX features
MGX_ANALYTICS_ENABLED=true
MGX_CHAT_ENABLED=true
MGX_RECOMMENDATIONS_ENABLED=true

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
# GitHub OAuth App credentials
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# GitHub API
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# =============================================================================
# AWS INTEGRATIONS
# =============================================================================
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# AWS SES for email
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# AWS CloudFront
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id

# =============================================================================
# RAG SYSTEM
# =============================================================================
# RAG (Retrieval-Augmented Generation) configuration
RAG_API_KEY=your_rag_api_key
RAG_API_ENDPOINT=https://api.rag-service.com/v1
RAG_MODEL=gpt-4
RAG_MAX_TOKENS=2048
RAG_TEMPERATURE=0.7

# Vector database
RAG_VECTOR_DB_URL=your_vector_db_connection_string
RAG_VECTOR_DB_API_KEY=your_vector_db_api_key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary database
DATABASE_URL="postgresql://username:password@localhost:5432/trae_ai_agency"
DATABASE_URL_NON_POOLING="postgresql://username:password@localhost:5432/trae_ai_agency"
DATABASE_POOL_SIZE=10
DATABASE_SSL_MODE=prefer

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
RATE_LIMIT_REDIS_URL="redis://localhost:6379"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for transactional emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@trae-ai-agency.com"

# Email templates
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# PWA Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
NOTIFICATION_API_KEY="your-notification-api-key"

# External APIs
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# File Upload
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal configuration (optional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================
# Social media API keys for sharing and analytics
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Application monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=AI Agency Landing Page

# Log management
LOGTAIL_TOKEN=your_logtail_token
LOG_LEVEL=info
LOG_FORMAT=json

# Performance monitoring
WEB_VITALS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature toggles for gradual rollouts
FEATURE_CHAT_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_DARK_MODE_ENABLED=true
FEATURE_PWA_ENABLED=true
FEATURE_OFFLINE_MODE_ENABLED=false

# A/B testing
AB_TESTING_ENABLED=false
AB_TESTING_PROVIDER=optimizely
AB_TESTING_PROJECT_ID=your_project_id

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-only settings
NODE_ENV=development
DEBUG=true
VERBOSE_LOGGING=true

# Hot reloading and development tools
FAST_REFRESH=true
SOURCE_MAPS=true
TYPE_CHECKING=true

# Mock data and testing
USE_MOCK_DATA=false
MOCK_API_DELAY=1000
TEST_USER_EMAIL=test@example.com

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Production-specific overrides (use .env.production)
# NODE_ENV=production
# DEBUG=false
# VERBOSE_LOGGING=false
# SOURCE_MAPS=false
# USE_MOCK_DATA=false

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================
# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Site is under maintenance. Please check back later.

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
# i18n configuration
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,uk,es,fr,de
LOCALE_DETECTION=true
LOCALE_COOKIE_NAME=NEXT_LOCALE

# Translation services
TRANSLATION_API_KEY=your_translation_api_key
TRANSLATION_SERVICE=google

# =============================================================================
# COMPLIANCE AND LEGAL
# =============================================================================
# GDPR and privacy compliance
GDPR_ENABLED=true
COOKIE_CONSENT_ENABLED=true
PRIVACY_POLICY_URL=/privacy
TERMS_OF_SERVICE_URL=/terms

# Data retention
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90
SESSION_RETENTION_DAYS=30

# =============================================================================
# CUSTOM INTEGRATIONS
# =============================================================================
# Add your custom integration environment variables here
# CUSTOM_API_KEY=your_custom_api_key
# CUSTOM_ENDPOINT=https://api.custom-service.com
# CUSTOM_FEATURE_ENABLED=true
