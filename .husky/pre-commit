#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# –¶–≤–µ—Ç–Ω–æ–π –≤—ã–≤–æ–¥
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}üîç –ó–∞–ø—É—Å–∫ pre-commit –ø—Ä–æ–≤–µ—Ä–æ–∫...${NC}"

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞–ª–∏—á–∏—è staged —Ñ–∞–π–ª–æ–≤
if [ -z "$(git diff --cached --name-only)" ]; then
  echo -e "${YELLOW}‚ö†Ô∏è  –ù–µ—Ç —Ñ–∞–π–ª–æ–≤ –¥–ª—è –∫–æ–º–º–∏—Ç–∞${NC}"
  exit 0
fi

# –ë—ã—Å—Ç—Ä–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ –∫–∞—á–µ—Å—Ç–≤–∞
echo -e "${BLUE}üöÄ –ë—ã—Å—Ç—Ä–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ –∫–∞—á–µ—Å—Ç–≤–∞ –∫–æ–¥–∞...${NC}"
if npm run quality:check; then
  echo -e "${GREEN}‚úÖ –ü—Ä–æ–≤–µ—Ä–∫–∏ –∫–∞—á–µ—Å—Ç–≤–∞ –ø—Ä–æ–π–¥–µ–Ω—ã${NC}"
else
  echo -e "${RED}‚ùå –û–±–Ω–∞—Ä—É–∂–µ–Ω—ã –ø—Ä–æ–±–ª–µ–º—ã –∫–∞—á–µ—Å—Ç–≤–∞${NC}"
  echo -e "${YELLOW}üí° –ü–æ–ø—Ä–æ–±—É–π—Ç–µ: npm run quality:fix${NC}"
  exit 1
fi

# Lint-staged –¥–ª—è —Ñ–∏–Ω–∞–ª—å–Ω–æ–π –ø—Ä–æ–≤–µ—Ä–∫–∏
echo -e "${BLUE}üîß –§–∏–Ω–∞–ª—å–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ staged —Ñ–∞–π–ª–æ–≤...${NC}"
if npx lint-staged; then
  echo -e "${GREEN}‚úÖ –í—Å–µ –ø—Ä–æ–≤–µ—Ä–∫–∏ –ø—Ä–æ–π–¥–µ–Ω—ã —É—Å–ø–µ—à–Ω–æ!${NC}"
  echo -e "${GREEN}üöÄ –ì–æ—Ç–æ–≤–æ –∫ –∫–æ–º–º–∏—Ç—É${NC}"
else
  echo -e "${RED}‚ùå Lint-staged –ø—Ä–æ–≤–µ—Ä–∫–∏ –Ω–µ –ø—Ä–æ–π–¥–µ–Ω—ã${NC}"
  exit 1
fi
